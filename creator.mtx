# creator.mtx

PACKAGE creator

# packages
PAK geometry    @OPTION margin=1in
PAK enumitem    @OPTION inline
PAK ulem        @OPTION normalem
PAK color, caption, graphicx, subfigure
PAK hyperref    @OPTION pdfstartview=FitH, CJKbookmarks=true, bookmarksnumbered=true, bookmarksopen=true, colorlinks, linkcolor=blue, anchorcolor=blue, citecolor=blue
PAK amsmath, amssymb, amsthm, amsfonts, mathrsfs, extarrows, bbm, bm, commutative-diagrams, quiver, cleveref, units
PAK old-arrows  @OPTION new

# equation setting
RAW \linespread{1.6}
RAW \addtolength{\jot}{0.5em}
DEF \arraystretch   @BE 0.6

# symbols
DEF \what#1     @BE \widehat{#1}
DEF \dhat#1     @BE \widehat{\widehat{#1}}
DEF \pprod      @BE \sideset{}{^\prime}\prod
DEF \dis$#1$    @BE $\displaystyle{#1}$
RAW \DeclareMathOperator{\hatoplus}{\hat\oplus}

# letters
FOR x @IN ABCDEFGHIJKLMNOPQRSTUVWXYZ
    DEF \%x%        @BE \mathbb{%x%}
    DEF \%x%%x%     @BE \mathscr{%x%}
    DEF \%x%%x%%x%  @BE \mathfrak{%x%}
END FOR
FOR x @IN abcdefghijklmnopqrstuvwxyz
    DEF \%x%        @BE \mathcal{%x.upper()%}
    DEF \%x%%x%%x%  @BE \mathfrak{%x%}
END FOR

# operator styles
DEF \opnormal#1     @BE \operatorname{#1}
DEF \opitalic#1     @BE \opnormal{\mathnormal{#1}}
DEF \opcursive#1    @BE \opitalic{\mathcal#1}
DEF \oplinear#1     @BE \opnormal{\mathbb{#1}}

# linear groups
DEF \GL     @BE \oplinear{GL}
DEF \SL     @BE \oplinear{SL}
DEF \SO     @BE \oplinear{SO}
DEF \SU     @BE \oplinear{SU}
DEF \PGL    @BE \oplinear{PGL}
DEF \PSL    @BE \oplinear{PSL}
DEF \U      @BE \oplinear{U}

# operators
DEF \adj    @BE \opnormal{adj}
DEF \Alt    @BE \opcursive{Alt}
DEF \Aut    @BE \opcursive{Aut}
DEF \Ann    @BE \opcursive{Ann}
DEF \Br     @BE \opcursive{Br}
DEF \Char   @BE \opnormal{char}
DEF \Cl     @BE \opcursive{Cl}
DEF \Cor    @BE \opcursive{Cor}
DEF \coim   @BE \opnormal{coim}
DEF \coker  @BE \opnormal{coker}
DEF \diag   @BE \opnormal{diag}
DEF \diam   @BE \opnormal{diam}
DEF \Div    @BE \opcursive{Div}
DEF \End    @BE \opcursive{End}
DEF \Ext    @BE \opcursive{Ext}
DEF \Frac   @BE \opcursive{Frac}
DEF \Gal    @BE \opcursive{Gal}
DEF \Hom    @BE \opcursive{Hom}
DEF \id     @BE \opnormal{id}
DEF \im     @BE \opnormal{im}
DEF \inv    @BE \opnormal{inv}
DEF \Im     @BE \opnormal{Im}
DEF \Inf    @BE \opcursive{Inf}
DEF \Irr    @BE \opcursive{Irr}
DEF \Mor    @BE \opcursive{Mor}
DEF \Nm     @BE \opcursive{N}
DEF \ord    @BE \opnormal{ord}
DEF \Orb    @BE \opcursive{Orb}
DEF \rad    @BE \opnormal{rad}
DEF \rank   @BE \opnormal{rank}
DEF \Re     @BE \opnormal{Re}
DEF \Res    @BE \opcursive{Res}
DEF \Stab   @BE \opcursive{Stab}
DEF \Spec   @BE \opcursive{Spec}
DEF \Sym    @BE \opcursive{Sym}
DEF \sign   @BE \opnormal{sign}
DEF \Tr     @BE \opcursive{Tr}
DEF \Tor    @BE \opcursive{Tor}
DEF \vol    @BE \opnormal{vol}

# environments
CTR counter@thms
CMD \SetTheoremNumberingPrefix  @BE %make_counter_under('counter@thms', '#1')%  @LEN 1
THM proposition     @BE %upperlower('Proposition')%     @COUNTER counter@thms   @STYLE plain
THM theorem         @BE %upperlower('Theorem')%         @COUNTER counter@thms   @STYLE plain
THM lemma           @BE %upperlower('Lemma')%           @COUNTER counter@thms   @STYLE plain
THM corollary       @BE %upperlower('Corollary')%       @COUNTER counter@thms   @STYLE plain
THM definition      @BE %upperlower('Definition')%      @COUNTER counter@thms   @STYLE definition
THM remark          @BE %upperlower('Remark')%          @COUNTER counter@thms   @STYLE definition
THM example         @BE %upperlower('Example')%         @COUNTER counter@thms   @STYLE definition
THM exercise        @BE %upperlower('Exercise')%        @COUNTER counter@thms   @STYLE plain
THM notation        @BE %upperlower('Notation')%        @WITHOUT_COUNTER
THM problem     @BE %upperlower('Problem')%     @STYLE plain
THM answer      @BE %upperlower('Answer')%      @STYLE definition
<?python
def cref(x, y):
    echo(r'\crefname{{{0}}}{{{1}}}{{{1}}}'.format(x, upperlower(y)))
cref('proposition', 'Proposition')
cref('theorem', 'Theorem')
cref('lemma', 'Lemma')
cref('corollary', 'Corollary')
cref('definition', 'Definition')
cref('remark', 'Remark')
cref('example', 'Example')
cref('exercise', 'Exercise')
?>

